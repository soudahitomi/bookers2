<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>

<%= @user.name %>
<%= @user.introduction %>

<%= link_to "edit", edit_user_path %>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'create Book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
    <%= link_to book_path do %>
     <%= image_tag @user.get_profile_image(100,100) %>
     <%= book.title%>
    <% end %>
     <%= book.body%>

<% end %>