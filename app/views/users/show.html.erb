<div class= "container" >
  <div class= "row">
    <div class="col-md-3"><!--col-md-3の開始タグ-->

      <h1>User info</h1>

        <%= image_tag @user.get_profile_image(100,100) %>
        <%= @user.name %>
        <%= @user.introduction %>
        <% if @user == current_user %>
          <div>
            <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-lg btn-block" do %>
                <i class="fa-solid fa-user-gear"></i>
            <% end %>
          </div>
        <% end %>

      <h1>New book</h1>
        <%= form_with model: @book do |f| %>

        <h4>title</h4>
        <%= f.text_field :title %>

        <h4>opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit class: "btn btn-success" do %>
          create Book
        <% end %>
        <% end %>
    </div><!--col-md-3の閉じタグ-->

    <div class="col-md-8 offset-md-1">
  <h1>Books</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>

          <tr>
            <td><%= link_to book_path(book.id) do %></td>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%= book.title%></td>
                <% end %><!--link_toの閉じタグ-->

            <td><%= book.body%></td>
          </tr>

        <% end %>
        </tbody>
      </table>
    </div><!--col-md-8 offsetの閉じタグ-->
  </div><!--rowの閉じタグ-->
</div><!--contanerの閉じタグ-->