<div class= "container" >
  <div class= "row">
    <div class="col-md-3"><!--col-md-3の開始タグ-->

<%= render partial: 'list', locals: { user: @user, book: @book } %>

    </div><!--col-md-3の閉じタグ-->

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>

        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %><!--ここの変数の@userがブロック変数のbookになると思いました。ユーザーの情報を渡すためなのはわかっていますが、なぜこうなるのか説明ができません-->
                <% end %><!--link_toの閉じタグ-->
              </td>

              <td>
                <%= link_to book_path(book.id) do %>
                <%= book.title%>
                <% end %>
              </td>

              <td><%= book.body%></td>
            </tr>
            <% end %>
        </tbody>

      </table>
    </div><!--col-md-8 offsetの閉じタグ-->
  </div><!--rowの閉じタグ-->
</div><!--contanerの閉じタグ-->