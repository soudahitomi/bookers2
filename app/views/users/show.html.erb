<h1>User info</h1>
<%= image_tag @user.get_profile_image(50,50) %>
<% @users.each do |user| %>
  <p><%= user.name %></p>
  <p><%= user.introduction %></p>
<% end %>
<%= link_to "edit", edit_user_path %>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'create Book' %>
<% end %>

<h1>Books</h1>
