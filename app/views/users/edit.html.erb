<div class= "container" >
  <div class= "row">
    <div class="col-md-3"><!--col-md-3の開始タグ-->

<%= render partial: 'list', locals: { user: @user, book: @book, } %>

    </div><!--col-md-3の閉じタグ-->

    <div class="col-md-8 offset-md-1">
<h1>user info</h1>

<%= form_with model: @user do |f| %>

  <p>Name</p>
  <%= f.text_field :name %>

  <p>Image</p>
   <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

  <p>Introduction</p>
  <%= f.text_area :introduction %>

  <%= f.submit "Update User" %>
<% end %>
</div><!--col-md-8 offsetの閉じタグ-->
  </div><!--rowの閉じタグ-->
</div><!--contanerの閉じタグ-->