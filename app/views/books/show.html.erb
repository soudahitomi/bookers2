<div class= "container" >
  <div class= "row">
    <div class="col-md-3"><!--col-md-3の開始タグ-->

<%= render partial: 'users/list', locals: { user: @user, book: @book, } %>

    </div><!--col-md-3の閉じタグ-->

    <div class="col-md-8 offset-md-1">
      <h3>Book detail</h3>

        <%= link_to book_path(@users.id) do %>
        <%= image_tag @users.get_profile_image(100,100) %>
        <%= @users.name %>
        <%= @books.title %>
        <% end %>

        <%= @books.body %>

        <%= link_to "edit", edit_book_path(@books.id)%>

        <% if @books.user == current_user %>
        <%= link_to "destroy", book_path(@books), method: :delete %>
        <% end %>
    </div><!--col-md-8 offsetの閉じタグ-->
  </div><!--rowの閉じタグ-->
</div><!--contanerの閉じタグ-->