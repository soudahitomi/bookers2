<h1>Books</h1>
<h3>Title</h3>
<h3>Opinion</h3>
<% @books.each do |book| %>
    <%= link_to book_path(book.id) do %>
     <%= image_tag book.user.get_profile_image(100,100) %>
     <%= book.title%>
    <% end %>
     <%= book.body%>

<% end %>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'create Book' %>
<% end %>